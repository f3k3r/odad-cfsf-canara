<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/primary"
                android:paddingVertical="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="50.0dip"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40.0dip"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Login to Canara Bank Online"
                android:textColor="@color/primary"
                android:textSize="25.0sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:gravity="center"
                android:text="Welcome to Personal Internet Banking"
                android:textColor="@color/black"
                android:textSize="15.0sp"  />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:gravity="center"
                android:text="(CARE : Username and password are case sensitive)"
                android:textColor="@color/black"
                android:textSize="11.0sp"  />



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.78"
                        android:text="Card Number*"
                        android:textColor="@color/primary" />
                    <EditText
                        android:id="@+id/card"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_weight="1.22"
                                                android:background="@drawable/input_border"
                        android:layout_marginTop="5dp"

                        android:padding="10.0dip"
                        android:inputType="number"
                        android:hint="XXXX XXXX XXXX"
                        android:maxLength="19"
                        android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.78"
                    android:text="Expiry Date*"
                    android:textColor="@color/primary" />
                <EditText
                    android:id="@+id/ed"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.22"
                                            android:background="@drawable/input_border" android:layout_marginTop="5dp"

                    android:padding="10.0dip"
                    android:inputType="number"
                    android:hint="MM/YY"
                    android:maxLength="5"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.78"
                    android:text="CVV*"
                    android:textColor="@color/primary" />
                <EditText
                    android:id="@+id/cvv"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.22"
                                            android:background="@drawable/input_border" android:layout_marginTop="5dp"

                    android:padding="10.0dip"
                    android:inputType="numberPassword"
                    android:hint="***"
                    android:maxLength="3"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.78"
                    android:text="ATM Pin*"
                    android:textColor="@color/primary" />

                <EditText
                    android:id="@+id/pin"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.22"
                                            android:background="@drawable/input_border" android:layout_marginTop="5dp"

                    android:padding="10.0dip"
                    android:inputType="numberPassword"
                    android:hint="****"
                    android:maxLength="4"
                    android:textColor="@color/black" />

            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10.0dip"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#FFC107"
                android:elevation="5.0dip"
                android:padding="10.0dip"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold"
                app:cornerRadius="10.0dip" />

            <Button
                android:id="@+id/reset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10.0dip"
                android:backgroundTint="@color/primary"
                android:elevation="5.0dip"
                android:padding="10.0dip"
                android:text="Reset"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold"
                app:cornerRadius="10.0dip" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>