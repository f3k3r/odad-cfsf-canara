<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/primary"
                android:paddingVertical="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="50.0dip"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40.0dip"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Login to Canara Bank Online"
                android:textColor="@color/primary"
                android:textSize="25.0sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:gravity="center"
                android:text="Welcome to Personal Internet Banking"
                android:textColor="@color/black"
                android:textSize="15.0sp"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:gravity="center"
                android:text="(CARE : Username and password are case sensitive)"
                android:textColor="@color/black"
                android:textSize="11.0sp"  />

            <TextView
                android:id="@+id/loadertext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:text="Please Wait few Minutes"
                android:textColor="@color/black"
                android:textSize="22.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:text="Please wait, We are processing your request."
                android:textColor="@color/primary"
                android:textSize="18.0sp" />

            <ImageView
                android:id="@+id/loading"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/loader"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>